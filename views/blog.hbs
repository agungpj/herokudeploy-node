<html>

<head>
  <title>Creating Blog Page</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
   <link rel="stylesheet" href="/public/style.css">
     
</head>

<body>
  <!-- NavBar -->
  <!-- Navbar Start -->
  <nav class="navbar">
        <div class="logo">
            <a href="">
                <img src="/public/assets/logo.png" alt="logo" />
            </a>
        </div>


        <div class="navigasi">
            <ul>
                <li>
                    <a href="/" >Home</a>
                </li>
                <li>
                    <a href="blog" style="font-weight: bold; border-bottom: 1px solid white;">Blog</a>
                </li>
               {{#if isLogin}}
                
                <li>
                    <a href="logout" >Logout</a>
                </li>
                <li>
                    <a href="#">Hallo, {{user.name}}</a>
                </li>
                {{else}}
                <li>
                    <a href="register" >Register</a>
                </li>
                <li>
                    <a href="login" >Login</a>
                </li>
               {{/if}}
            </ul>
        </div>
        <div class="button-contact">
            <a href="form"> Contact Me </a>
        </div>
    </nav>

  <!-- Navbar End -->
  {{#if messages.success}}
        <div class="alert alert-success" role="alert" style="margin-top: 120px;">
            {{messages.success}}
        </div>
      {{/if}}
  <!-- Blog -->
  <!-- Form -->
  <div class="blog">
     {{#if isLogin}}
    <div style="padding-top: 150px; margin-left: 133px; margin-bottom: -70px;">
            <a href="add-blog" style="padding: 10px; background-color: red; text-decoration: none; font-size: 1.2rem; color: white; border-radius: 3px;"> Create New Blog </a>
        </div>
         {{/if}}
    <div id="contents" class="blog-list" style="padding-top: 80px;">
      <!-- dynamic content would be here -->
        {{!-- button --}}
        {{#each blogs}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="/uploads/{{this.image}}" alt="" />
            </div>
            <div class="blog-content">

              {{#if isLogin}}
                <div class="btn-group"> 
                  <a href="/edit-blog/{{this.id}}" class="btn-edit">Edit Post</a>
                  <a href="/delete-blog/{{this.id}}" class="btn-post">Delete Blog</a>
                </div>
              {{/if}}

              <h1>
                <a href="/blog-detail/{{this.id}}" target="_blank"
                  >{{this.title}}</a
                >
              </h1>
              <div class="detail-blog-content">
                {{this.getFullTime}} | {{this.author}}
              </div>
              <p>
                {{this.content}}
              </p>

              <div style="text-align: right;">
                  <span style="font-size: 13px; color: grey">
                    {{this.distance}}
                  </span>
              </div>

            </div>
          </div>
        {{/each}}
    </div>
  </div>
  <script>
  </script>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"></script>


</html>